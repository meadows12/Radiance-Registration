<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Registration"
    android:background="#000000">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/Participant1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Participant1"
                    android:inputType="textPersonName"
                    android:textColorHint="#FFFFFF"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:paddingTop="30dp"/>

                <!--               <EditText-->
                android:id="@+id/Participant2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Participant2"
                android:inputType="textPersonName"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/Contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact number"
                    android:inputType="number"
                    android:textColorHint="#FFFFFF"
                    android:textColor="#FFFFFF"
                    android:paddingTop="30dp"/>
                <EditText
                    android:id="@+id/Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email ID"
                    android:inputType="textEmailAddress"
                    android:textColorHint="#FFFFFF"
                    android:textColor="#FFFFFF"
                    android:paddingTop="30dp"
                    />
                <EditText
                    android:id="@+id/College"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="College name"
                    android:inputType="text"
                    android:textColorHint="#FFFFFF"
                    android:textColor="#FFFFFF"
                    android:paddingTop="30dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="30dp">
                    <TextView
                        android:id="@+id/Year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Year:"
                        android:textSize="20dp"
                        android:textColor="#FFFFFF"
                        />

                    <CheckBox
                        android:id="@+id/FE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="FE"
                        android:textColorHint="#FFFFFF"
                        android:onClick="onYearClicked"
                        android:buttonTint="#FFFFFF"
                        />

                    <CheckBox
                        android:id="@+id/SE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="SE"
                        android:textColorHint="#FFFFFF"
                        android:onClick="onYearClicked"
                        android:buttonTint="#FFFFFF"

                        />

                    <CheckBox
                        android:id="@+id/TE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="TE"
                        android:textColorHint="#FFFFFF"
                        android:onClick="onYearClicked"
                        android:buttonTint="#FFFFFF"
                        />



                    <CheckBox
                        android:id="@+id/BE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="BE"
                        android:textColorHint="#FFFFFF"
                        android:onClick="onYearClicked"
                        android:buttonTint="#FFFFFF"
                        />
                </LinearLayout>
                <EditText
                    android:id="@+id/Date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date of Registration"
                    android:inputType="text"
                    android:textColorHint="#FFFFFF"
                    android:textColor="#FFFFFF"
                    android:paddingTop="30dp"
                    />
                <TextView
                    android:id="@+id/Technical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Technical Events"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:paddingTop="30dp"/>

                <CheckBox
                    android:id="@+id/Codewars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Code Wars"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFFFFF"/>
                <RadioGroup
                    android:id="@+id/rg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:orientation="horizontal"
                    android:visibility="invisible">
                    <RadioButton
                        android:id="@+id/ind1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Individual Rs.80"
                        android:textColor="#FFFFFF"
                        android:buttonTint="#FFFFFF"/>
                    <RadioButton
                        android:id="@+id/team1"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team Rs.100"
                        android:textColor="#FFFFFF"
                        android:buttonTint="#FFFFFF"/>

                </RadioGroup>
                <EditText
                    android:id="@+id/name3"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="Participant2"
                    android:visibility="invisible"
                    android:inputType="text"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFFFFF"
                    android:textColorHint="#FFFFFF"/>
                <CheckBox
                    android:id="@+id/Recodeit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recode It"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFFFFF"/>
                <RadioGroup
                    android:id="@+id/rg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:orientation="horizontal"
                    android:visibility="invisible">
                    <RadioButton
                        android:id="@+id/ind2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Individual Rs.80"
                        android:textColor="#FFFFFF"
                        android:buttonTint="#FFFFFF"/>
                    <RadioButton
                        android:id="@+id/team2"
                        android:layout_marginLeft="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:buttonTint="#FFFFFF"
                        android:text="Team Rs.100"/>
                </RadioGroup>
                <EditText
                    android:id="@+id/name4"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="Participant2"
                    android:visibility="invisible"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/Nontechnical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Non-Technical Events"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:paddingTop="30dp"/>



                <CheckBox
                    android:id="@+id/Shutterup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Shutter Up"
                    android:textColorHint="#FFFFFF"
                    android:buttonTint="#FFFFFF"/>
                <RadioGroup
                    android:id="@+id/rg3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:orientation="vertical"
                    android:visibility="invisible">
                    <RadioButton
                        android:id="@+id/one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1 Photo Rs.50"
                        android:textColor="#FFFFFF"
                        android:buttonTint="#FFFFFF"/>
                    <RadioButton
                        android:id="@+id/two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:buttonTint="#FFFFFF"
                        android:text="2 Photos Rs.80"/>
                    <RadioButton
                        android:id="@+id/three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:buttonTint="#FFFFFF"
                        android:text="3 Photos Rs.100"/>
                </RadioGroup>

                <CheckBox
                    android:id="@+id/Quizmaster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Quiz Master  Rs.80"
                    android:textColorHint="#FFFFFF"
                    android:buttonTint="#FFFFFF"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:text="Total Amount"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:id="@+id/result"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Pay"
                    android:background="#125290"
                    android:id="@+id/pay"
                    android:textColor="#FFFFFF"
                    />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>


</androidx.appcompat.widget.LinearLayoutCompat>